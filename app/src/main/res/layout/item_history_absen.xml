<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_outline_thin"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="6dp"
        app:srcCompat="@drawable/ic_img_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/status"
        android:layout_toRightOf="@+id/image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textColor="@color/defaultDarkText"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Absen Masuk" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textColor="@color/defaultDarkText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/defaultDarkText"
                android:textSize="12sp"
                tools:text="Herdian Murphy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="NIK"
                android:textColor="@color/defaultDarkText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/nik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/defaultDarkText"
                android:textSize="12sp"
                tools:text="1234567890" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cabang"
                android:textColor="@color/defaultDarkText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cabang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/defaultDarkText"
                android:textSize="12sp"
                tools:text="Jakarta Selatan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Jabatan"
                android:textColor="@color/defaultDarkText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/defaultDarkText"
                android:textSize="12sp"
                tools:text="Surveyor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Waktu Absen"
                android:textColor="@color/defaultDarkText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/waktu_absen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/defaultDarkText"
                android:textSize="12sp"
                tools:text="25/07/2019 09:30" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/status"
        android:layout_width="6dp"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
        android:background="@color/black" />

</RelativeLayout>